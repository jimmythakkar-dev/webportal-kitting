<p><%= t('_desc_new_part_to_loc',:scope => "bin_line_station.new_part_to_location")%></p>
<%= image_seperator %>
<div class="alert alert-success">
  <div class="row">
    <div class="col-sm-12">
      <%= flash[:alert] %>
    </div>
  </div>
</div>
<h5><%= t('line_station_action_request',:scope => "bin_line_station.update_line_station") %></h5>
