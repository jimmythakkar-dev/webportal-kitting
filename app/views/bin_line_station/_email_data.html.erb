<%if params[:delete_part] == "false"%>
    <h5>LINE STATION ACTION REQUEST</h5>
    <b> <%= session[:full_name] %> (Cust. #<%= session[:customer_number] %>) </b> has requested to <font color=red><b>CHANGE</b></font> <b><%= params[:WHSDESC] %></b><br />
    <br />
    <table border="0" cellspacing="4">
      <tr style="text-align: left">
        <td class="align_left">Submitted On:</td>
        <td class="align_left"><strong><%= Date.today%></strong></td>
      </tr>
      <tr>
        <td class="align_left"> Originator: </td>
        <td class="align_left"><strong><%= session[:user_name]%></strong></td>
      </tr>
    </table>
    <br />
    <table border="0" cellspacing="4">
      <tr>
        <td colspan="2" class="align_left"><b>Bin Details: </b></td>
      </tr>
      <tr>
        <td class="align_left">Location / Line Station: </td>
        <td class="align_left"><strong><%= params[:WHSDESC] %></strong></td>
      </tr>
      <tr>
        <td class="align_left">Scancode: </td>
        <td class="align_left"><strong><%= params[:Scancode]%></strong></td>
      </tr>
      <tr>
        <td class="align_left">Part Number:</td>
        <td class="align_left"><strong><%= params[:partno]%></strong></td>
      </tr>

      <% if  params[:bin] == params[:old_bin] %>
          <tr><td class="align_left">Bin:</td><td class="align_left"><strong><%= params[:old_bin] %></strong></td></tr>
      <%end%>

      <% if params[:part_number] == params[:old_part_number] %>
          <tr><td class="align_left">Ref:</td><td class="align_left"><strong><%= params[:old_part_number] %></strong></td></tr>
      <%end%>

      <% if params[:amc_qty] == params[:old_amc_qty] %>
          <tr><td class="align_left">AMC Qty:</td><td class="align_left"><strong><%= params[:old_amc_qty] %></strong></td></tr>
      <%end%>

      <% if  params[:pack_qty] == params[:old_pack_qty] %>
          <tr><td class="align_left">Pack Qty:</td><td class="align_left"><strong><%= params[:old_pack_qty] %></strong></td></tr>
      <%end%>

    </table>
    <br/>
    <table border="0" cellspacing="4" width="100%" style="border-collapse: inherit; border-spacing: 2px;">
      <tr style="">
        <td align="center" style="color: #FFFFFF; background-color:#006699; width:30%;" ><b>CHANGE</b></td>
        <td align="center" style="color: #FFFFFF; background-color:#006699; width:30%;"><b>FROM</b></td>
        <td align="center" style="color: #FFFFFF; background-color:#006699; width:40%;"><b>TO</b></td>
      </tr>
      <% @deltadex = 1%>
      <% if  params[:bin] != params[:old_bin] %>
          <tr <%if @deltadex % 2 == 0%> style="background-color: #E0E5E5" <% end %>>
            <td class="align_left">Bin:</td><td class="align_left"><strong><%= params[:old_bin] %></strong></td><td class="align_left"><strong><%= params[:bin] %></strong></td></tr><% @deltadex = @deltadex+1  %>
      <%end%>

      <% if params[:part_number] != params[:old_part_number] %>
          <tr <%if @deltadex % 2 == 0%> style="background-color: #E0E5E5" <% end %>>
            <td class="align_left">Ref:</td><td class="align_left"><strong><%= params[:old_part_number] %></strong></td><td class="align_left"><strong><%= params[:part_number] %></strong></td></tr><% @deltadex =  @deltadex+1 %>
      <%end%>

      <% if params[:amc_qty] != params[:old_amc_qty] %>
          <tr <%if @deltadex % 2 == 0%> style="background-color: #E0E5E5" <% end %>>
            <td class="align_left">AMC Qty:</td><td class="align_left"><strong><%= params[:old_amc_qty] %></strong></td><td class="align_left"><strong><%= params[:amc_qty] %></strong></td></tr><% @deltadex =  @deltadex+1 %>
      <%end%>

      <% if  params[:pack_qty] != params[:old_pack_qty] %>
          <tr <%if @deltadex % 2 == 0%> style="background-color: #E0E5E5" <% end %>>
            <td class="align_left">Pack Qty:</td><td class="align_left"><strong><%= params[:old_pack_qty] %></strong></td><td class="align_left"><strong><%= params[:pack_qty] %></strong></td></tr><% @deltadex =  @deltadex+1 %>
      <%end%>
    </table>

<%else%>

    <h5>LINE STATION ACTION REQUEST</h5>
    <b> <%= session[:full_name] %> (Cust. #<%= session[:customer_number] %>) </b> has requested to <font color=red><b> DELETE A SCANCODE</b></font> <b><%= params[:WHSDESC] %></b><br />
    <br />
    <table border="0" cellspacing="4">
      <tr style="text-align: left">
        <td class="align_left">Submitted On:</td>
        <td class="align_left"><strong><%= Date.today%></strong></td>
      </tr>
      <tr>
        <td class="align_left"> Originator: </td>
        <td class="align_left"><strong><%= session[:user_name]%></strong></td>
      </tr>
    </table>
    <br />
    <table border="0" cellspacing="4">
      <tr>
        <td colspan="2" class="align_left"><b>Bin Details: </b></td>
      </tr>
      <tr>
        <td class="align_left">Location / Line Station: </td>
        <td class="align_left"><strong><%= params[:WHSDESC] %></strong></td>
      </tr>
      <tr>
        <td class="align_left">Scancode: </td>
        <td class="align_left"><strong><%= params[:Scancode]%></strong></td>
      </tr>
      <tr>
        <td class="align_left">Part Number:</td>
        <td class="align_left"><strong><%= params[:partno]%></strong></td>
      </tr>

      <tr>
        <td class="align_left">Bin:</td>
        <td class="align_left"><strong><%= params[:bin] %></strong></td>
      </tr>

      <tr>
        <td class="align_left">Ref:</td>
        <td class="align_left"><strong><%= params[:part_number] %></strong></td>
      </tr>

      <tr>
        <td class="align_left">AMC Qty:</td>
        <td class="align_left"><strong><%= params[:amc_qty] %></strong></td>
      </tr>

      <tr>
        <td class="align_left">Pack Qty:</td>
        <td class="align_left"><strong><%= params[:pack_qty] %></strong></td>
      </tr>


    </table>

<%end%>