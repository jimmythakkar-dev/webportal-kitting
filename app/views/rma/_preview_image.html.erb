<!-- Modal -->
<div class="modal fade" id="preview_img" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Preview Images</h4>
      </div>
      <div class="modal-body">
        <img class="thumb" src="<%= image_path('Landing_Page.jpg') %>" alt="img" />
        <img class="thumb" src="<%= image_path('BE_images.png') %>" alt="img" />
        <img class="thumb" src="<%= image_path('KLX_logo.jpg') %>" alt="img" />
        <img class="thumb" src="<%= image_path('settings.gif') %>" alt="img" />
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
