        <% if session[:user_level] %>
            <% if session[:user_level] > "3" %>
                <%= submit_tag 'Save changes',id: 'cup_filling_btn', class: "btn btn-info"  %>
            <%end%>
        <%end%>
  <% end %>
  </div>
</div>
<%= render 'change_data_modal'%>