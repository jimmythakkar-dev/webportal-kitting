    <div class="form-group">
      <%= label_tag 'Search', nil, :class => "control-label col-sm-2" %>
      <div class="col-sm-4">
        <%= text_field_tag :kit_number_search , params[:kit_copy_number] || nil ,required: true, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag 'Search', :class => "btn btn-primary" %>
          </div>
    </div>
<% end%>
