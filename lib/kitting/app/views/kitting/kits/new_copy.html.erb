<h2 class="body_header">Kit Copy</h2>
<%= image_seperator %>
<p class="body_text_subhead">Kit Information</p>
<br>

<div class="row">
  <label class="control-label col-sm-3">Kit Number:</label>
  <div class="col-sm-3"><%= @kit.try(:kit_number) %></div>
</div>

<div class="row">
  <label class="control-label col-sm-3">Kit Media Type: </label>
  <div class="col-sm-9"><%= @kit.try(:kit_media_type).try(:name)%></div>
</div>
<div class="row">
  <label class="control-label col-sm-3">Bin Center: </label>
  <div class="col-sm-9"><%= @kit.try(:bincenter)%></div>
</div>
<div class="row">
  <label class="control-label col-sm-3">Status: </label>
  <div class="col-sm-9"><%= display_status(@kit.try(:status)) %></div>
</div>

<%= form_tag(create_copy_kits_path, class: "form-horizontal") do %>
    <%= hidden_field_tag :kit_id, params[:id] %><br>
    <div class="form-group">
      <label class="col-sm-3">Number Of Copies:</label>
      <div class="col-sm-4">
        <%= text_field_tag :number_of_copies, 1 , class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <% if session[:user_level] %>
            <% if session[:user_level] > "3" %>
                <%= submit_tag 'Create Copy', class: 'btn btn-primary', id: 'copy_button' %>
            <%end%>
        <%end%>
        <%= link_to 'Cancel', kit_path(params[:id]), class: 'btn btn-default'  %>
      </div>
    </div>
<% end %>

